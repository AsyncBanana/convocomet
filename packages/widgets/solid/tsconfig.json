{
	"compilerOptions": {
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"lib": ["esnext", "DOM", "DOM.Iterable"],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext",
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"jsx": "preserve",
		"jsxImportSource": "solid-js"
	},
	"include": ["src"]
}
